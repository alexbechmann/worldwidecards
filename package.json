{
  "name": "@wwc/dev",
  "version": "1.0.0",
  "description": "",
  "dependencies": {},
  "devDependencies": {
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "prettier": "^1.11.1",
    "remove-node-modules": "^1.7.2"
  },
  "private": true,
  "scripts": {
    "postinstall": "npm-run-all -p install:react-app install:express-server",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettier:watch": "onchange \"**/*.ts*\" \"**/*.md*\" \"**/*.css*\" -- prettier --write {{changed}}",
    "prettier": "prettier --config ./.prettierrc --write  \"{core,parse-server,react-app}/**/*.{ts*,md,css}\"",
    "install:react-app": "cd ./react-app && npm install",
    "clean:react-app": "remove-node-modules ./react-app/node_modules/",
    "start:react-app": "cd ./react-app && npm start",
    "install:express-server": "cd ./express-server && npm install",
    "clean:express-server": "remove-node-modules ./express-server/node_modules/",
    "start:express-server": "cd ./express-server && npm start",
    "install:core": "cd ./core && npm install",
    "clean:core": "remove-node-modules ./core/node_modules/",
    "start:core": "cd ./core && npm start",
    "build:core": "cd ./core && npm run build",
    "start": "npm run build:core && npm-run-all -p start:core start:react-app start:express-server prettier:watch",
    "clean": "npm-run-all -p clean:core clean:react-app clean:express-server"
  },
  "author": "",
  "license": "ISC"
}
